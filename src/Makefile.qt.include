# forms/foo.h -> forms/ui_foo.h
QT_FORMS_H=$(join $(dir $(QT_FORMS_UI)),$(addprefix ui_, $(notdir $(QT_FORMS_UI:.ui=.h))))

# Most files will depend on the forms and moc files as includes. Generate them
# before anything else.
$(QT_MOC): $(QT_FORMS_H)
$(qt_libDakeCoinqt_a_OBJECTS) $(qt_DakeCoin_qt_OBJECTS) : | $(QT_MOC)

#Generating these with a half-written protobuf header leads to wacky results.
#This makes sure it's done.

# DakeCoin-qt binary #
qt_DakeCoin_qt_CPPFLAGS = $(AM_CPPFLAGS) $(BITCOIN_INCLUDES) $(BITCOIN_QT_INCLUDES) \
  $(QT_INCLUDES) $(PROTOBUF_CFLAGS) $(QR_CFLAGS) -I$(top_srcdir)/src/qt/forms
qt_DakeCoin_qt_CXXFLAGS = $(AM_CXXFLAGS) $(QT_PIE_FLAGS)

qt_DakeCoin_qt_SOURCES = qt/DakeCoin.cpp
if TARGET_DARWIN
  qt_DakeCoin_qt_SOURCES += $(DAKECOIN_MM)
endif
if TARGET_WINDOWS
  qt_DakeCoin_qt_SOURCES += $(DAKECOIN_RC)
endif
if USE_QRCODE
  qt_DakeCoin_qt_SOURCES += qt/qrcodedialog.cpp
endif
qt_DakeCoin_qt_LDADD = qt/libDakeCoinqt.a $(LIBDAKECOIN_SERVER) 
if ENABLE_WALLET
qt_DakeCoin_qt_LDADD += $(LIBDAKECOIN_WALLET) 
endif



qt_DakeCoin_qt_LDADD += $(LIBDAKECOIN_CLI) $(LIBDAKECOIN_COMMON) $(LIBLEVELDB) $(LIBMEMENV) \
  $(BOOST_LIBS) $(QT_LIBS) $(QT_DBUS_LIBS) $(QR_LIBS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(MINIUPNPC_LIBS) \
  $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS)
qt_DakeCoin_qt_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(QT_LDFLAGS) $(LIBTOOL_APP_LDFLAGS)
qt_DakeCoin_qt_LIBTOOLFLAGS = --tag CXX

#locale/foo.ts -> locale/foo.qm
QT_QM=$(QT_TS:.ts=.qm)

SECONDARY: $(QT_QM)

qt/DakeCoinstrings.cpp: $(libDakeCoin_server_a_SOURCES) $(libDakeCoin_common_a_SOURCES) $(libDakeCoin_cli_a_SOURCES)
	@test -n $(XGETTEXT) || echo "xgettext is required for updating translations"
	@cd $(top_srcdir); XGETTEXT=$(XGETTEXT) share/qt/extract_strings_qt.py

translate: qt/DakeCoinstrings.cpp $(QT_FORMS_UI) $(QT_FORMS_UI) $(DAKECOIN_QT_CPP) $(DAKECOIN_QT_H) $(DAKECOIN_MM)
	@test -n $(LUPDATE) || echo "lupdate is required for updating translations"
	@QT_SELECT=$(QT_SELECT) $(LUPDATE) $^ -locations relative -no-obsolete -ts qt/locale/DakeCoin_en.ts

$(QT_QRC_CPP): $(QT_QRC) $(QT_QM) $(QT_FORMS_H) $(RES_ICONS) $(RES_IMAGES) $(RES_MOVIES) 
	@cd $(abs_srcdir); test -f $(RCC) && $(RCC) -name DakeCoin -o $(abs_builddir)/$@ $< || \
	  echo error: could not build $@
	$(SED) -i.bak -e '/^\*\*.*Created:/d' $@ && rm $@.bak
	$(SED) -i.bak -e '/^\*\*.*by:/d' $@ && rm $@.bak

CLEAN_QT = $(nodist_qt_libDakeCoinqt_a_SOURCES) $(QT_QM) $(QT_FORMS_H) qt/*.gcda qt/*.gcno

CLEANFILES += $(CLEAN_QT)

DakeCoin_qt_clean: FORCE
	rm -f $(CLEAN_QT) $(qt_libDakeCoinqt_a_OBJECTS) $(qt_DakeCoin_qt_OBJECTS) qt/DakeCoin-qt$(EXEEXT) $(LIBDAKECOINQT)

DakeCoin_qt : qt/DakeCoin-qt$(EXEEXT)

ui_%.h: %.ui
	@test -d $(abs_builddir)/$(@D) || $(MKDIR_P) $(abs_builddir)/$(@D)
	@test -f $(UIC) && QT_SELECT=$(QT_SELECT) $(UIC) -o $(abs_builddir)/$@ $(abs_srcdir)/$< || echo error: could not build $(abs_builddir)/$@
	$(SED) -e '/^\*\*.*Created:/d' $(abs_builddir)/$@ > $(abs_builddir)/$@.n && mv $(abs_builddir)/$@{.n,}
	$(SED) -e '/^\*\*.*by:/d' $(abs_builddir)/$@ > $(abs_builddir)/$@.n && mv $(abs_builddir)/$@{.n,}

%.moc: %.cpp
	QT_SELECT=$(QT_SELECT) $(MOC) $(QT_INCLUDES) $(MOC_DEFS) -o $@ $<
	$(SED) -e '/^\*\*.*Created:/d' $@ > $@.n && mv $@{.n,}
	$(SED) -e '/^\*\*.*by:/d' $@ > $@.n && mv $@{.n,}

moc_%.cpp: %.h
	QT_SELECT=$(QT_SELECT) $(MOC) $(QT_INCLUDES) $(MOC_DEFS) -o $@ $<
	$(SED) -e '/^\*\*.*Created:/d' $@ > $@.n && mv $@{.n,}
	$(SED) -e '/^\*\*.*by:/d' $@ > $@.n && mv $@{.n,}

%.qm: %.ts
	@test -d $(abs_builddir)/$(@D) || $(MKDIR_P) $(abs_builddir)/$(@D)
	@test -f $(LRELEASE) && QT_SELECT=$(QT_SELECT) $(LRELEASE) $(abs_srcdir)/$< -qm $(abs_builddir)/$@ || \
	  echo error: could not build $(abs_builddir)/$@
